<div class="open-game col-md-9 col-md-push-2">
  <a href="/game/<%= game.id %>" class="btn btn-md join-game-button"> JOIN </a>
      <div class="players container-responsive">
            <div class="row-responsive">
            <% if game.current_players.length > 0 %>
                <div class="player col-md-4 col-md-offset-1"> <%= game.current_players[0] %></div>
            <% else %>
                <div class="player col-md-4 col-md-offset-1"> -- </div>
            <% end %>
            <% if game.current_players.length > 1 %>
                <div class="player col-md-4 col-md-offset-2"> <%= game.current_players[1] %></div>
            <% else %>
                <div class="player col-md-4 col-md-offset-2"> -- </div>
            <% end %>
            <% if game.current_players.length > 2 %>
               <div class="player col-md-4 col-md-offset-1"> <%= game.current_players[2] %></div>
            <% else %>
                <div class="player col-md-4 col-md-offset-1"> -- </div> 
            <% end %>
            <% if game.current_players.length > 3 %>
                <div class="player col-md-4 col-md-offset-2"> <%= game.current_players[3] %></div>
            <% else %>
                <div class="player col-md-4 col-md-offset-2"> -- </div>
            <% end %>
          </div>
    </div>
  </ul>
</div>